#!/usr/bin/env node
var forever = require("forever-monitor");
var path = require("path");

var file = path.resolve(__dirname + '/../worker.js');

var child = new (forever.Monitor)(file, {
  max: 3,
  silent: false,
  options: process.argv
});

child.on('exit', function() {
  console.log('ODT worker has exited after 3 restarts');
});

child.start();
